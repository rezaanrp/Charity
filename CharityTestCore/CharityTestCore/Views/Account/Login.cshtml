@model LoginModel
@{
	Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <!-- input form -->
            <form id="account" method="post" class="login100-form validate-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <span class="login100-form-title">ورود به ناحیه کاربری</span>

                <!-- enter email-->
                <div class="wrap-input100 validate-input" data-validate=" نام کاربری  خود را وارد کنید!">
                    <input asp-for="UserName" class="input100" autocomplete="username" aria-required="true" placeholder="نام کاربری" autofocus>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <!-- / enter email -->
                <!-- enter password-->
                <div class="wrap-input100 validate-input" data-validate=" رمز عبور را وارد کنید!">
                    <input asp-for="Password" class="input100" autocomplete="current-password" aria-required="true" placeholder="رمز عبور" type="password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <!-- / enter password-->
                <!-- login button-->
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">ورود</button>
                </div>
                <!-- / login button -->
                <!-- register-->
                <div class="text-center p-t-50">
                    <div class="checkbox">
                        <a class="btn btn-outline-info btn-sm btn-block" asp-controller="User" asp-action="Create">ثبت نام</a>
                    </div>
                </div>
                <!-- / register-->

                <div style="margin-top:10px;color:red" class="form-group">
                    @Html.ValidationSummary()
                    @ViewBag.ErrorMessage
                </div>
            </form>
            <!-- / input form -->
            <!-- form image -->
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/loginv4/pics/charity.png" alt="IMG">
            </div>
            <!-- / form image -->
        </div>
    </div>
</div>


			
		


