@model CharityTestCore.Models.ChangePasswordInformation

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminSimple.cshtml";

}
@section ProfileName
    {
    @if (User.Identity.IsAuthenticated)
        @User.Identity.Name


}
@section Body{
    @using (Html.BeginForm())
    {
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">تغییر رمزعبور </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->							
                <form class="form-horizontal">
                    <div class="card-body">
                        <div class="form-group">

                            <label for="inputPassword1" class="col-sm-2 control-label">رمزعبور قدیم</label>

                            <div class="col-sm-10">
                            <input asp-for="OldPassword" id="inputPassword1" type="password" placeholder=" رمزعبور قدیم را وارد کنید" class="form-control" required>

                            </div>

                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">رمزعبور جدید</label>

                            <div class="col-sm-10">
                                <input asp-for="NewPassword" id="inputPassword1" type="password" class="form-control" placeholder="رمزعبور را وارد کنید" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword4" class="col-sm-2 control-label">رمزعبور جدید</label>

                            <div class="col-sm-10">
                                <input asp-for="NewPasswordRepeat" id="inputPassword1" type="password" placeholder="رمزعبور جدید را دوباره وارد کنید" class="form-control" required>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">تایید </button>
                        <button type="submit" class="btn btn-default">لغو</button>
                    </div>
                <div style="margin-top:10px;color:red" class="form-group">
                    @Html.ValidationSummary()
                    @ViewBag.ErrorMessage
                </div>
                    <!-- /.card-footer -->
                </form>
        </div>
    }

}
@section script{





